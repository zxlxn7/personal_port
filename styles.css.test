/* --------- IMPORTANDO FONTE MODERNA DO GOOGLE --------- */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

/* --------- RESET --------- */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* --------- CONFIGURAÇÕES GERAIS --------- */
body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(120deg, #1e1e2f, #12121c); /* Fundo gradiente escuro */
    color: #f1f1f1; /* Texto claro para contraste */
    padding: 40px 20px;
    line-height: 1.7;
}

/* --------- HEADER COM ESTILO DESTACADO --------- */
.header {
    background: linear-gradient(135deg, #dc86ed, #2bafef, #22def5, #0aee83);
    padding: 40px;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 10px 20px rgba(0, 114, 255, 0.3);
    margin-bottom: 40px;
}

.header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

/* --------- SEÇÕES COM ANIMAÇÃO --------- */
section {
    background-color: #2a2a3b;
    padding: 30px;
    margin-bottom: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

section:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.25);
}

/* --------- TÍTULOS --------- */
h2 {
    font-size: 1.8rem;
    color: #61dafb; /* Azul vibrante para títulos */
    margin-bottom: 15px;
}

p {
    font-size: 1.1rem;
    color: #ddd;
}

/* --------- LISTA DE PROJETOS --------- */
ul {
    list-style-type: none;
    padding-left: 0;
}

li {
    background-color: #3a3a4f;
    margin-bottom: 10px;
    padding: 12px 20px;
    border-radius: 8px;
    color: #f1f1f1;
    transition: background-color 0.3s;
}

li:hover {
    background-color: #505067;
}

/* --------- RESPONSIVIDADE --------- */
@media (max-width: 768px) {
    .header h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.5rem;
    }

    section {
        padding: 20px;
    }
}

